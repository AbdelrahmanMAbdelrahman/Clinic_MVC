 @using Resources

@model P1_Clinic.Models.Prescription

<div class="container-sm d-flex justify-content-center">
    <div class="card shadow p-3" style="width:400px">
       
            
            <div class="mb-3">
                @Html.LabelFor(p => p.MedicationName,Local.MedicationName, new { @class = "form-lable" })
                @Html.TextBoxFor(p => p.MedicationName, new { @class = "form-control", @readonly = "readonly" })
            </div>
            <div class="mb-3">
                @Html.LabelFor(p => p.MedicalRecord.Patient.Person.Name,Local.Patient, new { @class = "form-lable" })
                @Html.TextBoxFor(p => p.MedicalRecordId,  new { @class = "form-control", @readonly = "readonly" })
            </div>
            <div class="mb-3">
                @Html.LabelFor(p => p.Dosage,Local.Dosage, new { @class = "form-lable" })
                @Html.TextBoxFor(p => p.Dosage, new { @class = "form-control", @readonly = "readonly" })
            </div>
            <div class="mb-3">
                @Html.LabelFor(p => p.StartDate,Local.StartDate, new { @class = "form-lable" })
                @Html.TextBoxFor(p => p.StartDate, new { @class = "form-control", type = "date" , @readonly = "readonly" })
            </div>
            <div class="mb-3">
                @Html.LabelFor(p => p.EndDate,Local.EndDate, new { @class = "form-lable" })
                @Html.TextBoxFor(p => p.EndDate, new { @class = "form-control", type = "date", @readonly = "readonly" })
            </div>
            <div class="mb-3">
                @Html.LabelFor(p => p.Frequency,Local.Frequency, new { @class = "form-lable" })
                @Html.TextBoxFor(p => p.Frequency, new { @class = "form-control", @readonly = "readonly" })
            </div>
            <div class="mb-3">
                @Html.LabelFor(p => p.Notes,Local.Notes, new { @class = "form-lable" })
                @Html.TextBoxFor(p => p.Notes, new { @class = "form-control", @readonly = "readonly" })
            </div>
            @Html.ActionLink(Local.BackToList,"GetAllPrescriptions","Prescription",null,new {@class="btn btn-info"})
   
    </div>
</div>