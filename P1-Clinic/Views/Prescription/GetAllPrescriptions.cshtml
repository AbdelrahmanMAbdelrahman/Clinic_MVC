@model List<P1_Clinic.Models.Prescription>
    @using Resources
@if (Model.Count == 0)
{
               <div class="text-center d-flex flex-column justify-content-center align-items-center" style="height:100vh">
                 <h1 class="text-primary">  no Prescriptions found</h1>
                   <br />
                   @Html.ActionLink(Local.AddPrescription, "AddNewPrescription", "Prescription", null, new { @class = "btn btn-info mb-3" })
               </div>

}
else
{
<div class="container-sm">
    @Html.ActionLink(Local.AddPrescription, "AddNewPrescription", "Prescription", null, new { @class = "btn btn-info mb-3" })
    <table class="table table-bordered table-striped table-hover">
        <tr>
            <td>@Local.MedicationName</td>
            <td>@Local.Patient</td>
            <td>@Local.Dosage</td>
            <td>@Local.Frequency</td>
            <td>@Local.Notes</td>
            <td>@Local.StartDate</td>
            <td>@Local.EndDate</td>
            <td>@Local.Action</td>
        </tr>
        <tbody>
            @foreach (var pres in Model)
            {
            <tr>
                <td><a class="text-decoration-none" href="/Prescription/GetPrescription/@pres.PrescriptionId">@pres.MedicationName</a> </td>
                <td><a class="text-decoration-none" href="/Patient/GetPatient/@pres.MedicalRecord.PatientId">@pres.MedicalRecord.Patient.Person.Name</a></td>
                <td>@pres.Dosage</td>
                <td>@pres.Frequency</td>
                <td>@pres.Notes</td>
                <td>@pres.StartDate</td>
                <td>@pres.EndDate</td>
                <td>
                    @Html.ActionLink("Update", "UpdatePrescription", "Prescription", new { Id = pres.PrescriptionId },
             new { @class = "btn btn-info m-1" })
                    @Html.ActionLink("Delete", "DeletePrescription", "Prescription", new { Id = pres.PrescriptionId },
             new { @class = "btn btn-danger m-1" })
                    
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>


}