@model P1_Clinic.Models.MedicalRecord
@using Resources
<div class="container-sm d-flex justify-content-center">

    <div class="card shadow p-5" style="min-width:400px">
        <h1 class="text-center"></h1>
        <div class="mb-3">
            @Html.LabelFor(m => m.Patient.Person.Name,Local.Patient, new { @class = "form-table" })
            @Html.TextBoxFor(m => m.Patient.Person.Name,  new { @class = "form-control" ,@readonly="readonly"})
        </div>
        <div class="mb-3">
            @Html.LabelFor(m => m.Doctor.Person.Name,Local.Doctor,  new { @class = "form-table" })
            @Html.TextBoxFor(m => m.Doctor.Person.Name,  new { @class = "form-control",@readonly="readonly" })
        </div>
        <div class="mb-3">
            @Html.LabelFor(m => m.Diagnosis,Local.Diagnosis, new { @class = "form-table" })
            @Html.TextBoxFor(m => m.Diagnosis, new { @class = "form-control",@readonly="radonly" })
        </div>
        <div class="mb-3">
            @Html.LabelFor(m => m.VisitDescription,Local.VisitDescription,new { @class = "form-table" })
            @Html.TextBoxFor(m => m.VisitDescription, new { @class = "form-control",@readonly="readonly" })
        </div>
        <div class="mb-3">
            @Html.LabelFor(m => m.Notes,Local.Notes, new { @class = "form-table" })
            @Html.TextBoxFor(m => m.Notes, new { @class = "form-control",@readonly="readonly" })
        </div>
        @Html.ActionLink(Local.BackToList,"GetAllMedicalRecords","MedicalRecord")



    </div>
</div>