@model List<P1_Clinic.Models.Payment>
@using Resources
@if (Model.Count == 0)
{
    <div class="justify-content-center d-flex flex-column align-items-center" style="height:100vh">
        <h1 class="text-center text-primary ">@Local.NoPaymentsFoundYet</h1>
        <br />
        @Html.ActionLink(Local.AddNewPayment, "AddNewPayment", "Payment", null, new { @class = "btn btn-primary m-3" })
    </div>
}
else
{
    <div class="container-sm">
        <h1 class="text-center">@Local.Payments</h1>
        @Html.ActionLink(Local.AddNewPayment, "AddNewPayment", "Payment", null, new { @class = "btn btn-primary m-3" })
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>@Local.PaymentId</th>
                    <th>@Local.PaymentDate</th>
                    <th>@Local.AmountPaid</th>
                    <th>@Local.Patient</th>
                    <th>@Local.Doctor</th>
                    <th>@Local.PaymentMethod</th>
                    <th>@Local.Notes</th>


                </tr>
            </thead>
            <tbody>
                @foreach (var payment in Model)
                {
                    <tr>
                        <td>
                            <a class="text-decoration-none" href="/Payment/GetPaymentBy/@payment.PaymentId"> @payment.PaymentId</a>
                        </td>
                        <td>@payment.PaymentDate</td>
                        <td>@payment.AmountPaid</td>
                        <td>
                            <a class="text-decoration-none" href="/Patient/GetPatient/@payment.PatientId"> @payment.Patient.Person.Name</a>
                        </td>
                        <td>
                            <a class="text-decoration-none" href="/Doctor/GetDoctor/@payment.DoctorId"> @payment.Doctor.Person.Name</a>
                        </td>
                        <td>@payment.PaymentMethod.MethodName</td>
                        <td>@payment.Notes</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>}